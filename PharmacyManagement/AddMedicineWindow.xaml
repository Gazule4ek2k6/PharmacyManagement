<Window x:Class="PharmacyManagement.AddMedicineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyManagement"
        mc:Ignorable="d"
        Title="Добавить лекарство" Height="850" Width="662"
        Background="#F0F4FF">

    <StackPanel Margin="0,40,0,40" Background="White" 
                HorizontalAlignment="Center"
                Width="440"
                Effect="{x:Null}">

        <TextBlock Text="Добавление лекарства" 
                   FontSize="22" 
                   FontWeight="SemiBold" 
                   Foreground="#2C3E87"
                   Margin="0,0,0,25"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Название лекарства" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding MedicineName}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,18"/>

        <TextBlock Text="Производитель" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding Manufacturer}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,18"/>

        <TextBlock Text="Форма выпуска" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding DosageForm}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,18"/>

        <StackPanel Orientation="Horizontal" 
                    Margin="0,0,0,22"
                    Height="36"
                    VerticalAlignment="Center">
            <CheckBox IsChecked="{Binding PrescriptionRequired}"
                      Width="20" 
                      Height="20"
                      BorderBrush="#4F46E5"
                      Background="White"/>
            <TextBlock Text="Требуется рецепт" 
                       FontSize="14" 
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="#4A5568"/>
        </StackPanel>

        <TextBlock Text="Цена (₽)" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding Price}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,18"/>

        <TextBlock Text="Количество на складе" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding Quantity}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,18"/>

        <TextBlock Text="Поставщик" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <ComboBox x:Name="SuppliersList"
                  DisplayMemberPath="SupplierName"
                  SelectedValuePath="SupplierId"
                  SelectedValue="{Binding Supplier}"
                  Height="36" 
                  Padding="12,8" 
                  FontSize="14"
                  BorderBrush="#A5B4FC" 
                  BorderThickness="1.5"
                  Background="#F8FAFC"
                  Margin="0,0,0,18"/>

        <TextBlock Text="Ссылка на фото" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding Photo}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,24"/>

        <Button Content="Сохранить" 
                Click="Save_Click"
                Height="44" 
                FontSize="15" 
                FontWeight="Medium"
                Background="#4F46E5" 
                Foreground="White" 
                BorderThickness="0"
                Padding="20,0"
                Margin="0,8,0,0"
                HorizontalAlignment="Stretch">
            <Button.Effect>
                <DropShadowEffect Color="#4F46E5" 
                                  BlurRadius="12" 
                                  ShadowDepth="0" 
                                  Opacity="0.25"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>