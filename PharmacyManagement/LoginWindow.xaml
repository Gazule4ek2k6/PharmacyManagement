<Window x:Class="PharmacyManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyManagement"
        mc:Ignorable="d"
        Title="Авторизация" Height="480" Width="552"
        Background="#F0F4FF">

    <StackPanel Margin="0,40,0,40" Background="White" 
                HorizontalAlignment="Center"
                Width="400">

        <TextBlock Text="Pharmacy" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#4F46E5"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="Management" 
                   FontSize="28" 
                   FontWeight="Medium" 
                   Foreground="#2C3E87"
                   HorizontalAlignment="Center"
                   Margin="0,-4,0,0"/>

        <TextBlock Text="Вход в систему" 
                   FontSize="16" 
                   Foreground="#64748B"
                   HorizontalAlignment="Center"
                   Margin="0,8,0,30"/>

        <TextBlock Text="Логин" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox x:Name="txtLogin" 
                 Text="admin" 
                 Height="42" 
                 Padding="16,10" 
                 FontSize="15"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,20"/>

        <TextBlock Text="Пароль" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox x:Name="txtPass" 
                     Text="admin"
                     Height="42" 
                     Padding="16,10" 
                     FontSize="15"
                     BorderBrush="#A5B4FC" 
                     BorderThickness="1.5"
                     Background="#F8FAFC"
                     Margin="0,0,0,24"/>

        <Button Content="Войти в систему" 
                Click="Login_Click"
                Height="48" 
                FontSize="16" 
                FontWeight="SemiBold"
                Background="#4F46E5" 
                Foreground="White" 
                BorderThickness="0"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch">
            <Button.Effect>
                <DropShadowEffect Color="#4F46E5" 
                                  BlurRadius="14" 
                                  ShadowDepth="0" 
                                  Opacity="0.3"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>