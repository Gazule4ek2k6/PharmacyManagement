<Window x:Class="PharmacyManagement.AddSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyManagement"
        mc:Ignorable="d"
        Title="Новая продажа" Height="648" Width="633"
        Background="#F0F4FF">

    <StackPanel Margin="0,40,0,40" Background="White" 
                HorizontalAlignment="Center"
                Width="450">

        <TextBlock Text="Оформление продажи" 
                   FontSize="22" 
                   FontWeight="SemiBold" 
                   Foreground="#2C3E87"
                   Margin="0,0,0,25"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Дата продажи" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <DatePicker SelectedDate="{Binding SaleDateTime}" 
                    Height="36" 
                    Padding="12,5" 
                    FontSize="14"
                    BorderBrush="#A5B4FC" 
                    BorderThickness="1.5"
                    Background="#F8FAFC"
                    Margin="0,0,0,18"/>

        <TextBlock Text="Клиент" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <ComboBox x:Name="CustomerList"
                  DisplayMemberPath="FullName"
                  SelectedValuePath="CustomerId"
                  SelectedValue="{Binding CustomerId}"
                  Height="36" 
                  Padding="12,8" 
                  FontSize="14"
                  BorderBrush="#A5B4FC" 
                  BorderThickness="1.5"
                  Background="#F8FAFC"
                  Margin="0,0,0,18"/>

        <TextBlock Text="Лекарство" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <ComboBox x:Name="MedicineList"
                  DisplayMemberPath="MedicineName"
                  SelectedValuePath="MedicineId"
                  SelectedValue="{Binding MedicineId}"
                  Height="36" 
                  Padding="12,8" 
                  FontSize="14"
                  BorderBrush="#A5B4FC" 
                  BorderThickness="1.5"
                  Background="#F8FAFC"
                  Margin="0,0,0,18"/>

        <TextBlock Text="Количество" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding Quantity}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,18"/>

        <TextBlock Text="Сумма (₽)" 
                   FontSize="14" 
                   Margin="0,0,0,6"
                   Foreground="#4A5568"/>
        <TextBox Text="{Binding Amount}" 
                 Height="36" 
                 Padding="12,8" 
                 FontSize="14"
                 BorderBrush="#A5B4FC" 
                 BorderThickness="1.5"
                 Background="#F8FAFC"
                 Margin="0,0,0,24"/>

        <Button Content="Оформить продажу" 
                Click="Save_Click"
                Height="44" 
                FontSize="15" 
                FontWeight="Medium"
                Background="#4F46E5" 
                Foreground="White" 
                BorderThickness="0"
                Padding="20,0"
                Margin="0,8,0,0"
                HorizontalAlignment="Stretch">
            <Button.Effect>
                <DropShadowEffect Color="#4F46E5" 
                                  BlurRadius="12" 
                                  ShadowDepth="0" 
                                  Opacity="0.25"/>
            </Button.Effect>
        </Button>

    </StackPanel>
</Window>